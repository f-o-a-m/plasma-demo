
{
    "name": "plasma-demo",
    "version": "0.0.1",
    "source-dir": "contracts",
    "artifacts-dir": "abis",
    "modules": [ "CryptoCards"
               , "ERC20Receiver"
               , "ExtendedERC20"
               , "LoomToken"
               , "RootChain"
               , "SparseMerkleTree"
               , "ValidatorManagerContract"
               ],
    "dependencies": [ "solidity-rlp"
